# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-this-in-production

# Database
DATABASE_URL=sqlite+aiosqlite:///./stackbrowseragent.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/stackbrowseragent

# LLM API Keys (Optional - for cloud LLM providers)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# Agent Configuration
MAX_CONCURRENT_AGENTS=20
AGENT_TIMEOUT_SECONDS=300
TASK_RETRY_LIMIT=3

# CORS Origins (comma-separated)
# Add your Chrome extension ID here
# CORS_ORIGINS=chrome-extension://your-extension-id,http://localhost:3000
